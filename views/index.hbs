<!DOCTYPE html>
<html>
<head>
    <title>Unofficial Arte plus7 viewer</title>
    <meta name="viewport" content="width=device-width">
    <link href="css/main.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="main">
    <div class="header">
        <h1>{{title}} (<a href="/fr">FR</a> / <a href="/de">DE</a>)</h1>
        <div id="channels">
            <span class="channelfilter">All</span>
            {{#each channels}}
                | <span class="channelfilter">{{this.name}}</span>&nbsp;({{this.count}})
            {{/each}}
        </div>
    </div>
    <input type="search" id="container-search" value="" class="form-control" placeholder="Search..." data-list="#shows">

    <div id="shows">
    {{#each shows}}
        <div class="show" data-channels="{{channels}}" data-em="{{em}}">
            <h2><a class="showtitle" href="{{url}}" target="_blank">{{title}}</a> <span style="font-size: 0.7em">({{duration}}min)</span> <span class="pin"></span></h2>
            <img class="lazy" data-original="{{image_url}}" width="235" height="132">
            <noscript><img src="{{image_url}}" width="235" height="132"></noscript>
            <p class="showtext"> {{desc}}</p>
            <p><b>{{airdate_long}}</b><br>
            {{channels}}</p>
        </div>
    {{/each}}
    </div>
</div>

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="/lib/jquery.lazyload.js" type="text/javascript"></script>
<script src="/lib/jquery.sticky.js" type="text/javascript"></script>
<script src="/lib/lockr.min.js" type="text/javascript"></script>
<script src="/lib/jquery.hideseek.js" type="text/javascript"></script>
<script src="/js/index.js" type="text/javascript"></script>

